#!/bin/sh

echo "#ifndef __CONFIG_PKG_H__" > ./config_pkg.h
echo "#define __CONFIG_PKG_H__" >> ./config_pkg.h
echo "/*" >> ./config_pkg.h
echo " Parameters auto-generated by ./configure" >> ./config_pkg.h
echo "*/" >> ./config_pkg.h

echo > ./config.mk

for i in boost galois/eda dali phydb
do
	if ./findpkg -i $i >/dev/null
	then
		j=`echo $i | sed s,/,_,g`
		echo "#define FOUND_$j" >> ./config_pkg.h
		echo "${j}_INCLUDE=\$(shell ./findpkg -i $i)" >> ./config.mk
		echo "${j}_LIBDIR=\$(shell ./findpkg -l $i)" >> ./config.mk
		echo "Package $i: YES"
	else	  
		echo "Package $i: NO"
	fi
done

echo >> ./config_pkg.h
echo "#endif /* __CONFIG_PKG_H__ */ " >> ./config_pkg.h
