#!/bin/sh

echo "/*"  > ./config_pkg.h
echo " Parameters auto-generated by ./configure" >> ./config_pkg.h
echo "*/" >> ./config_pkg.h

echo > ./config.mk

for i in boost Galois dali
do
	if ./findpkg -i $i >/dev/null
	then
		echo "#define FOUND_$i" >> ./config_pkg.h
		echo "${i}_INCLUDE=\$(shell ./findpkg -i $i)" >> ./config.mk
		echo "${i}_LIBDIR=\$(shell ./findpkg -l $i)" >> ./config.mk
		echo "Package $i: YES"
	else	  
		echo "Package $i: NO"
	fi
done
